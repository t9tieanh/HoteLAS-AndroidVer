<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".HotelDetailActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".LoginEmailActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".EnterPasswordActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".dialog.LocationDialogActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".PhotogalleryActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReservationHistoryActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="myapp"
                    android:host="reservation"
                    android:pathPrefix="/success" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiscountActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>